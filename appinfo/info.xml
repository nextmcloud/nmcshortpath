	<types>
		<authentication/>
	</types>
	<category>experimental</category>
	<category>integration</category>
	<website>https://github.com/nextmcloud/nmcshortpath</website>
	<bugs>https://jira.devops.telekom.de/projects/NMCLOUD/issues</bugs>
	<repository>https://github.com/nextmcloud/nmcshortpath</repository>
